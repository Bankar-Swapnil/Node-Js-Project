extends base.pug

block scripts  
    //- script(src="/static/index.js")
    script(src=" ../static/prism.js")   

block style 
    style 
        include ../static/base.css
        include ../static/main.css
        include prism.css 

block content
    div.com1
        img(id="htmllogo" src="../static/img/htmllogo.png", alt="")
        h1 HIML Cheatsheet
    div.com
        div#sec1 
            ol 
                li Div Section
                    pre.language-html  
                        code &lt;div>Block element&lt;/div>

                li Headings
                    pre.language-html  
                        code
                            | &lt;h1>Page title&lt;/h1>
                            | &lt;h2>Subheading&lt;/h2>
                            | &lt;h3>Tertiary heading&lt;/h3>
                            | &lt;h4>Quaternary heading&lt;/h4>

                li Paragraph
                    pre.language-html  
                        code 
                            | &lt;p style="text-align: center;">text&lt;/p>
                li Image
                    pre.language-html  
                        code 
                            | &lt;p>&lt;img src="/demo.jpg" alt="description" width="100" height="48" />&lt;/p>

                li Mailto link
                    pre.language-html  
                        code 
                            | &lt;p>&lt;a href="mailto:me@ruwix.com?Subject=Hi%20mate" target="_top">Send Mail&lt;/a>&lt;/p>

                li Inner anchor (jump on page)
                    pre.language-html  
                        code 
                            | &lt;a href="#footer">Jump to footnote&lt;/a>
                            | &lt;br />
                            | &lt;a name="footer">&lt;/a>Footnote content

                li Bold text
                    pre.language-html  
                        code 
                            | &lt;strong>Bold text&lt;/strong>

                li Italic text
                    pre.language-html  
                        code 
                            | &lt;em>Italic text&lt;/em>

                li Underlined text
                    pre.language-html  
                        code 
                            | &lt;p>&lt;span style="text-decoration: underline;">Underlined text&lt;/span>&lt;/p>

                li Iframe
                    pre.language-html  
                        code 
                            | &lt;iframe src="link.html" width="200" height="200">
                            | &lt;/iframe> 

                li Abbreviation
                    pre.language-html  
                        code 
                            | &lt;abbr title="Hypertext Markup Language">HTML&lt;/abbr>
                
                li Comment
                    pre.language-html  
                        code 
                            | &lt;!-- HTML
                            | Comment -->
                
                li Horizontal Line
                    pre.language-html  
                        code 
                            | &lt;hr />

                li Line break
                    pre.language-html  
                        code 
                            | &lt;br />

                li Quotation
                    pre.language-html  
                        code 
                            | &lt;q>Success is a journey not a destination.&lt;/q>
                            | &lt;blockquote cite="https://ruwix.com/">
                            | The Rubik's Cube is the World's best selling puzzle toy.
                            | &lt;/blockquote>                            | 

                li Video
                    pre.language-html  
                        code 
                            | &lt;p>&lt;video controls="controls" width="200" height="150">
                            | &lt;source src="vid.mp4" type="video/mp4" />
                            | &lt;source src="vid.ogg" type="video/ogg" />
                            | No video support.
                            | &lt;/video>&lt;/p>

                li Audio
                    pre.language-html  
                        code 
                            | &lt;audio controls>
                            | &lt;source src="sound.ogg" type="audio/ogg">
                            | &lt;source src="sound.mp3" type="audio/mpeg">
                            | No audio support.
                            | &lt;/audio> 
        

                li Unordered list
                    pre.language-html  
                        code 
                            | &lt;ul>
                            | &lt;li>First&lt;/li>
                            | &lt;li>Second&lt;/li>
                            | &lt;li>Third&lt;/li>
                            | &lt;/ul>


                li Definition list
                    pre.language-html  
                        code 
                            | &lt;dl>
                            | &lt;dt>HTML&lt;/dt>
                            | &lt;dd>Hypertext Markup Language&lt;/dd>
                            | &lt;dt>CSS&lt;/dt>
                            | &lt;dd>Cascading Style Sheets &lt;/dd>
                            | &lt;/dl>


                li Form
                    pre.language-html  
                        code 
                            | &lt;form action="/action.php" method="post">
                            | Name: &lt;input name="name" type="text" /> &lt;br /> 
                            | Age: &lt;input max="99" min="1" name="age" step="1" type="number" value="18" /> &lt;br />
                            | &lt;select name="gender">
                            | &lt;option selected="selected" value="male">Male&lt;/option>
                            | &lt;option value="female">Female&lt;/option>
                            | &lt;/select>&lt;br /> 
                            | &lt;input checked="checked" name="newsletter" type="radio" value="daily" /> Daily &lt;input name="newsletter" type="radio" value="weekly" /> Weekly&lt;br />
                            | &lt;textarea cols="20" name="comments" rows="5">Comment&lt;/textarea>&lt;br />
                            | &lt;label>&lt;input name="terms" type="checkbox" value="tandc" />Accept terms&lt;/label> &lt;br />
                            | &lt;input type="submit" value="Submit" />
                            | &lt;/form>
                            